#!/bin/bash

SCRIPT_DIR=/usr/local/xgfw
IPSET_GFWLIST=gfwlist
DNS_PORT=5300
DNS=127.0.0.1

deleteFile() {
  local filePath=$1
  if [ -f "$filePath" ]; then
   rm "$filePath"
  fi
}

updateFromChnroute() {
  curl 'http://ftp.apnic.net/apnic/stats/apnic/delegated-apnic-latest' | grep ipv4 | grep CN | awk -F\| '{ printf("%s/%d\n", $4, 32-log($5)/log(2)) }' > $SCRIPT_DIR/chnroute/chnroute.txt
  if test -s $SCRIPT_DIR/chnroute/chnroute.txt; then
    echo "Update chnroute.txt Success"
  else
    echo "Update chnroute.txt Failed"
  fi
}

updateFromCustomer(){

}

updateFromGfwlist() {
  deleteFile $SCRIPT_DIR/dnsmasq.d/gfw_list.conf
  # download gfw_list.conf
  $SCRIPT_DIR/gfwlist2dnsmasq.sh -s $IPSET_GFWLIST -p $DNS_PORT -d $DNS -o $SCRIPT_DIR/dnsmasq.d/gfw_list.conf
  if test -s $SCRIPT_DIR/dnsmasq.d/gfw_list.conf; then
    cp -f $SCRIPT_DIR/dnsmasq.d/gfw_list.conf /etc/dnsmasq.d/
    if pidof dnsmasq>/dev/null; then
      /etc/init.d/dnsmasq restart
    fi
    echo "Update gfw_list.conf Success"
  else
    echo "Update gfw_list.conf Failed"
  fi
}

updateDnsmasqConf() {
  updateFromGfwlist
  updateFromCustomer
}

[ 0 == `grep "^conf-dir=" /etc/dnsmasq.conf|wc -l` ] && echo conf-dir=/etc/dnsmasq.d >> /etc/dnsmasq.conf 
updateDnsmasqConf
updateFromChnroute